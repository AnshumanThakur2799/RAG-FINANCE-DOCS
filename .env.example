EMBEDDING_PROVIDER=openai
OPENAI_API_KEY=your_openai_key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Azure OpenAI (set EMBEDDING_PROVIDER=azure)
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com
AZURE_OPENAI_API_KEY=your_azure_openai_key
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT=your-embedding-deployment

# Local embeddings (set EMBEDDING_PROVIDER=local)
LOCAL_EMBEDDING_MODEL=intfloat/e5-small-v2 # multi-qa-mpnet-base-dot-v1 | all-MiniLM-L6-v2 | all-mpnet-base-v2
LOCAL_EMBEDDING_NORMALIZE=true
LOCAL_EMBEDDING_PROMPT_STYLE=e5
# LOCAL_EMBEDDING_DEVICE=cpu

# LLM provider (DeepInfra OpenAI-compatible)
LLM_PROVIDER=deepinfra
DEEPINFRA_API_KEY=your_deepinfra_key
DEEPINFRA_BASE_URL=https://api.deepinfra.com/v1/openai
DEEPINFRA_MODEL=meta-llama/Meta-Llama-3-8B-Instruct
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.2

# Storage overrides (optional)
SQLITE_DB_PATH=data/metadata.db
LANCEDB_DIR=data/lancedb
CHUNK_SIZE_TOKENS=500
CHUNK_OVERLAP_TOKENS=50
RETRIEVAL_MODE=hybrid # dense | lexical | hybrid
HYBRID_RRF_K=60
HYBRID_CANDIDATE_MULTIPLIER=4
